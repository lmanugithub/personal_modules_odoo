<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_presupuestoform" model="ir.ui.view">
        <field name="name">Vista formulario de presupuesto depeliculas</field>
        <field name="model">presupuesto</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
<!--                    <center>-->
<!--                        <h1 style="color: red">-->
<!--                            Titulo-->
<!--                        </h1>-->
<!--                    </center>-->
                    <widget name="web_ribbon" title="Archivado" bg_color="bg-danger" attrs="{'invisible':[('active','=',True)]}"/>
                    <field name="image_1920" widget="image" class="oe_avatar"
                           options="{'preview_image': 'image_128', 'size':['',128] }"/>
                    <div class="oe_title">
                        <div class="o_row">
                            <field name="active" invisible="1"/>
                            <h1 style="display: flex;">
                                <field name="name"
                                       placeholder="Nombre de la pelicula"
                                       required="1"
                                       default_focus="1"
                                       class="oe_inline"/>

                                <field name="puntuacion"
                                       widget="percentpie"
                                       string=" "
                                       style="padding-left: 10px;"
                                       class="oe_inline"/>

                                <field name="puntuacion2"
                                       placeholder="PuntuaciÃ³n de usuario"
                                       class="oe_edit_only oe_inline" />

                            </h1>
                        </div>
                        <div class="o_row" style="display: flex;">
                            <field name="clasificacion" required="1"/>
                            <span class="fa fa-film"
                                  attrs="{'invisible': [('clasificacion','=',False),('fch_estreno','=',False)] }"
                                  style="padding: 5px 5px;"/>
+                           <field name="fch_estreno"/>
                        </div>
                        <div class="o_row">
                            <field name="genero_ids" widget="many2many_tags" style="display: flex;"/>
                        </div>
                    </div>

                </sheet>
            </form>
        </field>
    </record>

</odoo>